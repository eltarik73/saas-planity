# ============================================
# GaragistePro — Variables d'environnement
# Copier en .env.local pour développement
# ============================================

# ─── Database (Railway PostgreSQL) ───────────
DATABASE_URL="postgresql://user:password@host:5432/garagistepro?schema=public"

# ─── Clerk Auth ──────────────────────────────
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard/onboarding

# ─── Stripe ──────────────────────────────────
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx

# ─── Brevo (Email) ──────────────────────────
BREVO_API_KEY=xkeysib-xxxxx
BREVO_SENDER_EMAIL=noreply@garagistepro.fr
BREVO_SENDER_NAME=GaragistePro

# ─── Mapbox ──────────────────────────────────
NEXT_PUBLIC_MAPBOX_TOKEN=pk.xxxxx

# ─── Sentry ─────────────────────────────────
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ─── Feature Flags ──────────────────────────
NEXT_PUBLIC_PAYMENTS_ENABLED=false
NEXT_PUBLIC_VEHICLE_LOOKUP_ENABLED=false

# ─── Vehicle Lookup API (SIV / plaque) ──────
VEHICLE_LOOKUP_API_URL=https://api.example.com/vehicle
VEHICLE_LOOKUP_API_KEY=xxxxx

# ─── App ─────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=GaragistePro
NODE_ENV=development
